@page "{slug?}"

@model TinyBlog.Web.Pages.PostModel
@{
    ViewData["Title"] = Model.Post.Title;
}

<div class="blog-post">
    <h2 class="blog-post-title">@Model.Post.Title</h2>
    <p class="blog-post-meta"><i class="glyphicon glyphicon-calendar"></i>&nbsp;@Model.Post.PubDate.ToString("MMMM dd, yyyy") by <a href="/">@Model.Post.Author</a></p>
    @Html.Raw(Model.Post.Content)
    <p class="blog-post-meta"><i class="glyphicon glyphicon-tag"></i>&nbsp;@string.Join(",", Model.Post.PostCategories)</p>
</div> 